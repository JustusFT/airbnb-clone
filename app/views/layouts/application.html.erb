<!DOCTYPE html>
<html>
  <head>
    <title>Pairbnb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="main-container" class="container-fluid">
      <div id="navbar">
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-navbar-collapse">
                COLLAPSE
              </button>
              <a class="navbar-brand" href="#">Not AirBnB</a>
            </div>
            <div class="collapse navbar-collapse" id="main-navbar-collapse">
              <ul class="nav navbar-nav">
                <li class="active"><a href="/">Home</a></li>
                <li><a href="/listings">Listings</a></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <% if signed_in? %>
                  <li><%= link_to current_user.full_name, "/users/#{current_user.id}" %></li>
                  <li><%= image_tag(current_user.avatar_url, {class: "profile-pic"}) if current_user.avatar? %></li>
                  <li><%= button_to 'Sign out', sign_out_path, method: :delete %></li>
                <% else %>
                  <li><%= link_to 'Sign in', sign_in_path %></li>
                  <li><%= link_to "Sign in with Facebook", "/auth/facebook" %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </nav>
      </div>

      <div id="flash">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
