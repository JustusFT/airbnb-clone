<%= form_for @listing do |f| %>
  <div style="display: inline-block">
    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :name %>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :name, type: 'text' %>
      </div>
    </div>

    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :description %>
      </div>
      <div class="col-sm-6">
        <%= f.text_area :description, type: 'text' %>
      </div>
    </div>

    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :price %>
      </div>
      <div class="col-sm-6">
        <%= f.number_field :price, type: 'number' %>
      </div>
    </div>

    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :address %>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :address, type: 'text' %>
      </div>
    </div>

    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :room_count %>
      </div>
      <div class="col-sm-6">
        <%= f.number_field :room_count, type: 'number' %>
      </div>
    </div>

    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :bed_count %>
      </div>
      <div class="col-sm-6">
        <%= f.number_field :bed_count, type: 'number' %>
      </div>
    </div>

    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :guest_count %>
      </div>
      <div class="col-sm-6">
        <%= f.number_field :guest_count, type: 'number' %>
      </div>
    </div>

    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :tag_list %>
        (Separate tags with a comma)
      </div>
      <div class="col-sm-6">
        <%= f.text_field :tag_list, type: 'text' %>
      </div>
    </div>

    <div class="submit-field">
      <%= f.submit %>
    </div>
  </div>
<% end %>
