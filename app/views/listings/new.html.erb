<%= form_for @listing do |f| %>
  <div style="display: inline-block">
    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :name %>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :name, type: 'text' %>
      </div>
    </div>

    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :description %>
      </div>
      <div class="col-sm-6">
        <%= f.text_area :description, type: 'text' %>
      </div>
    </div>

    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :price %>
      </div>
      <div class="col-sm-6">
        <%= f.number_field :price, type: 'number' %>
      </div>
    </div>

    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :address %>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :address, type: 'text' %>
      </div>
    </div>

    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :room_count %>
      </div>
      <div class="col-sm-6">
        <%= f.number_field :room_count, type: 'number' %>
      </div>
    </div>

    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :bed_count %>
      </div>
      <div class="col-sm-6">
        <%= f.number_field :bed_count, type: 'number' %>
      </div>
    </div>

    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :guest_count %>
      </div>
      <div class="col-sm-6">
        <%= f.number_field :guest_count, type: 'number' %>
      </div>
    </div>

    <div class="text-field row">
      <div class="col-sm-6">
        <%= f.label :tag_list %>
        (Separate tags with a comma)
      </div>
      <div class="col-sm-6">
        <%= f.text_field :tag_list, type: 'text' %>
      </div>
    </div>

    <fieldset id="fieldset-amenities">
      <legend>Amenities: </legend>
      <% amenities = ["heating", "kitchen", "tv", "wireless_internet", "air_conditioning", "breakfast", "buzzer/wireless_intercom", "doorman", "dryer", "family/kid_friendly", "hair_dryer", "hangers", "indoor_fireplace", "iron", "laptop_friendly_workspace", "lock_on_bedroom_door", "self_check-in", "shampoo", "washer"] %>
      <%= form_tag do %>
        <% amenities.each do |x| %>
          <%= check_box_tag("amenities[#{x}]") %>
          <%= label_tag("amenities[#{x}]", x.titleize) %>
        <% end %>
      <% end %>
    </fieldset>

    <div class="submit-field">
      <%= f.submit %>
    </div>
  </div>
<% end %>

<script>
  $("#fieldset-amenities > input[type=checkbox]").checkboxradio({
    icon: false
  });
</script>
