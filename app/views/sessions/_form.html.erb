<%= form_for :session, url: session_path, html: {class: "form-horizontal"} do |form| %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to "/auth/facebook", class: "form-control btn btn-primary" do %>
        <i class="fa fa-facebook fa-lg" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;Sign in with Facebook
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :email, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :email, type: 'email', class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: "btn btn-default" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to t(".forgot_password"), new_password_path %>
    </div>
  </div>
<% end %>
