<div class="form-group">
  <%= form.label :email, nil, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= form.text_field :email, type: 'email', class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= form.label :full_name, nil, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= form.text_field :full_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= form.label :password, nil, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= form.password_field :password, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= form.label :password_confirmation, nil, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= form.password_field :password_confirmation, class: "form-control" %>
  </div>
</div>
